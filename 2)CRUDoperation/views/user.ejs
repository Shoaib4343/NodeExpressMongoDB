<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Cards</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="bg-gray-100 min-h-screen ">
        <h1 class="text-center text-6xl font-bold py-10" >All Users</h1> 
        <a href="/" class="text-blue-600 underline">Go Home</a>
        <div class="  grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 max-w-7xl mx-auto py-20 gap-6 px-4 ">
            <!-- User Card -->
            <%if(user.length > 0){ %>
                
                <% user.forEach((user)=>{ %>
                    <div class="bg-white shadow-md rounded-lg overflow-hidden">
                        <img src="<%= user.image %>" alt="User Image" class="w-full h-48  object-cover object-top">
                        <div class="p-4">
                            <h2 class="text-xl font-semibold"><%= user.name %></h2>
                            <p class="text-gray-600"><%= user.email %></p>
                            <div class="flex justify-between mt-4 space-x-2">
                                <a class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" href="/edit/<%= user._id %>">Update</a>
                                <a class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700" href="/delete/<%= user._id %>">Delete</a>
                            </div>
                        </div>
                    </div>
              <%  }) %>
               <%}else{ %>
                <h3>No user yet</h3>
            <%   } %>

            
        
        
        
        
        
        
            <!-- Add more user cards as needed -->
        </div>
    </div>
</body>
</html>
